datasource db {
    provider = "mongodb"
    url = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
    previewFeatures = ["fullTextSearch"]
}

model news {
    id String @id @default(auto()) @map("_id") @db.ObjectId
    title String
    date DateTime @default(now())
    category String
    thumbnail String
    content String
    pinned Boolean @default(false)
}